{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2019",
    "jsx": "react",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "baseUrl": "src"
  },
  "exclude": ["node_modules"]
}
